<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>loader.JdbcClassLoader</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>servlets.index.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register servlet</servlet-name>
        <servlet-class>servlets.register.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConctactUsServlet</servlet-name>
        <servlet-class>servlets.contactUS.ConctactUsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>servlets.cart.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>servlets.shop.ShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>servlets.product.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.logout.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Result</servlet-name>
        <servlet-class>servlets.result.ResultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addObjectServlet</servlet-name>
        <servlet-class>servlets.addObject.AddObjectServlet</servlet-class>
        <init-param>
            <param-name>uploadDir</param-name>
            <param-value>/tmp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AddAnomaly</servlet-name>
        <servlet-class>servlets.addReview.AddAnomalyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addReview</servlet-name>
        <servlet-class>servlets.addReview.AddReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyOrders</servlet-name>
        <servlet-class>servlets.myOrders.MyOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConctactUsServlet</servlet-name>
        <url-pattern>/conctactUs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Result</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addObjectServlet</servlet-name>
        <url-pattern>/addObject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAnomaly</servlet-name>
        <url-pattern>/addAnomaly</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addReview</servlet-name>
        <url-pattern>/addReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyOrders</servlet-name>
        <url-pattern>/myOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register servlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

    <servlet-mapping>
        <servlet-name>register servlet</servlet-name>
        <url-pattern>/utils/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
